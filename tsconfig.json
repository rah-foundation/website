{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "noResolve": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "jsx": "react"
  },
  "exclude": [
    "node_modules"
  ],
  "awesomeTypescriptLoaderOptions": {
    "allowNonTsExtensions": true,
    "module": "none"
  }
}